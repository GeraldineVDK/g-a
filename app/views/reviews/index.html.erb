<div class="container-all-dashboard" id="id-container-all">
  <%= render 'shared/navbar' %>
  <div class="container-index-dashboard">
  <div class="card-form-dashboard">
    <div class="card-table">
      <h1>Revues des Clients</h1>
      <table style="width:100%">
        <tr class="col-name">
<!--           <th>Status</th> -->
          <th>Status</th>
          <th>Titre</th>
          <th>Contenu</th>
          <th>Rating</th>
          <th>Nom</th>
          <th>Role</th>
          <th></th>
          <th></th>
        </tr>
        <% @reviews.each do |r|%>
          <tr>
            <td><% if r.status == "Pending"%>
              <%= "⏸" %>
            <% elsif r.status == "Lu" %>
             <%= "👌" %>
            <% else  %>
              <%=  "⚠️"%>
            <% end %>
            </td>
            <!-- <td><i class="far fa-pause-circle"></i></td> -->
            <td><%= r.title %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td><%= r.writer %></td>
            <td><%= r.role %></td>
            <td><%= link_to review_path(r.id) do %>
              <i class="fas fa-info-circle", id='info'></i>
            <% end %></td>
            <!-- <td><i class="far fa-edit" id="update-icon"></i></td> -->
            <td><%= link_to review_destroy_path(r.id), method: :delete, data: { confirm: "Est-vous sûr?" } do %>
                  <i class="fa fa-trash", id="trash"></i>
                <% end %></td>
          </tr>
        <% end %>
      </table>
</div>
        </div>
        </div>
  <%= render 'shared/footer' %>
</div>
